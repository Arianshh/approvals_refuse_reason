<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="approval_refuse_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.approval.refuse.form</field>
        <field name="model">hr.approval.refuse</field>
        <field name="arch" type="xml">
            <form string="Test">
                <group class="oe_title">
                    <field name="reason"/>
                </group>
                <footer>
                    <button type="object" name="action_refuse" string="Refuse" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="approval_refuse_wizard_action" model="ir.actions.act_window">
        <field name="name">Test Model Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.approval.refuse</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="approval_refuse_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
